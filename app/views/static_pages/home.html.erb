<div class="center jumbotron">
  <h1>Welcome to Budget 2.0</h1>

  <h2>Created for BudgetHack 2017</h2>


  <div class="row">
    <aside class="col-md-3">
      <section class="user_info">
        <% if logged_in? %>
          <%= render 'shared/user_info' %>
          </section>
          <section class="idea_form">
          <%= render 'shared/idea_form' %>
        <% else %>
          <%= link_to "Add your voice", signup_path, class: "btn btn-lg btn-primary" %>
        <% end %>
      </section>
    </aside>
  <div class="col-md-6">
    <h3>Popular Ideas</h3>
    <%= render 'shared/popular_feed' %>
  </div>
  <div class="col-md-3">
    <h3>Recent Ideas</h3>
    <%= render 'shared/recent_feed' %>
  </div>
</div>





</div>
