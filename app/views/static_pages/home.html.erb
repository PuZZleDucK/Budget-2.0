<div class="center jumbotron">
  <h1>Welcome to Budget 2.0</h1>

  <h2>Created for BudgetHack 2017</h2>


  <div class="row">
  <% if logged_in? %>
      <aside class="col-md-4">
        <section class="user_info">
          <%= render 'shared/user_info' %>
        </section>
        <section class="idea_form">
          <%= render 'shared/idea_form' %>
        </section>
      </aside>
  <% else %>
    <aside class="col-md-4">
      <%= link_to "Join the conversation", signup_path, class: "btn btn-lg btn-primary" %>
    </aside>
  <% end %>
  <div class="col-md-8">
    <h3>Recent Ideas</h3>
    <%= render 'shared/feed' %>
  </div>
</div>





</div>
