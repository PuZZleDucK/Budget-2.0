<li id="idea-<%= idea.id %>">
  <%= link_to gravatar_for(idea.user, size: 50), idea.user %>
  <span class="user"><%= link_to idea.user.first_name, idea.user %></span>
  <span class="content"><%= idea.content %></span>
  <section class="stats">
    <%= render 'shared/idea_stats', idea: idea %>
  </section>
  <%= render 'shared/support_form', user: current_user, idea: idea %>
  <span class="timestamp">
    Posted <%= time_ago_in_words(idea.created_at) %> ago.
  </span>
</li>
